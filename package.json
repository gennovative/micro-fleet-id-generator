{
    "name": "@micro-fleet/id-generator",
    "description": "Provides methods to generate database primary key ID.",
    "version": "1.1.3",
    "scripts": {
        "build": "npm run compile && npm run test",
        "clean": "rimraf dist coverage .nyc_output",
        "definition": "node ../../../scripts/definition.js",
        "dedup": "rimraf node_modules/**/node_modules/**/typings",
        "compile": "npm run clean && npm run lint && tsc --pretty",
        "release": "npm run build && npm run definition",
        "test": "nyc --reporter=json --reporter=html --include dist/app/**/*.js mocha --recursive dist/test",
        "lint": "tslint --fix 'src/**/*.ts'",
        "watch": "npm run clean && npm run lint && tsc --watch --pretty",
        "linkPackages": "node ../../../scripts/linkPackages.js",
        "prepublishOnly": "npm run release"
    },
    "dependencies": {
        "flake-idgen": "~1.1",
        "shortid": "~2.2",
        "uuid": "~3.1"
    },
    "devDependencies": {
        "@types/chai": "~4.1",
        "@types/chai-spies": "~0.0.1",
        "@types/flake-idgen": "~0.1",
        "@types/mocha": "~5.2",
        "@types/node": "~10.14",
        "@types/shortid": "0.0.29",
        "@types/uuid": "~3.4",
        "chai": "~4.1",
        "chai-spies": "git://github.com/chaijs/chai-spies.git#b11aeebf",
        "mocha": "~5.2",
        "nyc": "~13.3",
        "rimraf": "~2.6",
        "ts-declarator": "~1.0",
        "tslint": "~5.11",
        "typescript": "~3.3"
    },
    "peerDependencies": {
        "@micro-fleet/common": "~1.4",
        "@micro-fleet/service-communication": "~0.3"
    },
    "publishConfig": {
        "access": "public"
    },
    "author": {
        "name": "gennovative",
        "url": "https://github.com/gennovative"
    },
    "engines": {
        "node": ">=10.4.0"
    },
    "license": "MIT",
    "private": false,
    "main": "./dist/app/index.js",
    "types": "./typings/app.d.ts",
    "repository": "git@github.com:gennovative/micro-fleet-id-generator.git"
}
